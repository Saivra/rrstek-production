@{
    ViewData["Title"] = "Requests";
}



<div class="row paddingtop">

    <!-- left slider -->
    <div class="col-md-2">

        <div class="box-header">
            <div class="box-body ">


                <div class="text-center padding-bottom">
                    <a  class="mybutton">
                        <i class="fa fa-coffee icon_fix" aria-hidden="true"></i>
                    </a><br>
                    <h4 class="login_text_text">Break</h4>
                </div>

                <div class="text-center padding-bottom">
                    <a   class="mybutton">
                        <i class="fa fa-tasks icon_fix" aria-hidden="true"></i>
                    </a><br>
                    <h4 class="login_text_text">Activity</h4>
                </div>


                <div class="text-center padding-bottom">
                    <a   class="mybutton">
                        <i class="fa fa-filter icon_fix" aria-hidden="true"></i>
                    </a><br>
                    <h4 class="login_text_text text-center">Filter</h4>
                </div>


                <div class="text-center padding-bottom">
                    <a asp-area="" asp-controller="Home" asp-action="Index" class="mybutton">
                        <i class="fa fa-sign-out icon_fix" aria-hidden="true"></i>
                    </a><br>
                    <h4 class="login_text_text">Leave</h4>
                </div>

            </div>
        </div>
    </div>

    <!-- content -->
    <div class="col-md-8" style=" height:100vh; border-radius: 1rem; background-color: #2e3958;">


        <div class="row">
            <div class="col-xs-12">


                <!-- general form elements -->
                <div class="box">


                    <h3 class="box-title text-white">Request Maintenance : Filling Machine - AMAS00031</h3>

                    <!-- form start -->
                    <form role="form">
                        <div class="box-body">
                            <div class="form-group">
                                <label for="exampleInputtext" class="text-white">Description</label>
                                <input type="text" class="form-control inputfield" id="exampleInputtext" placeholder="">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1" class="text-white">Note</label>
                                <input type="text" class="form-control inputfield" rows="4" id="exampleInputPassword1" placeholder="">
                            </div>

                        </div>
                        <!-- /.box-body -->



                        <div class="col-md-3 text-center">

                            <a asp-area="" asp-controller="Home" asp-action="Machine"class="mybutton">
                                <i class="fa fa-close icon_fix" aria-hidden="true"></i>
                            </a><br>
                            <h4 class="login_text_text">Cancel</h4>

                        </div>

                        <div class="col-md-3 text-center">

                            <a asp-area="" asp-controller="Home" asp-action="Myjobs"class="mybutton">
                                <i class="fa fa-paper-plane icon_fix" aria-hidden="true"></i>
                            </a><br>
                            <h4 class="login_text_text">Submit</h4>
                        </div>




                    </form>
                </div>
                <!-- /.box -->




            </div>



            <!-- /.col -->
        </div>







    </div>

    <!-- right slider -->
    <div class="col-md-2" style=" ">

        <div class="box-header">
            <div class="box-body ">

                <div class="text-center padding-bottom">
                    <a asp-area="" asp-controller="Home" asp-action="Startjob" class="mybutton">
                        <i class="fa fa-play icon_fix" aria-hidden="true"></i>
                    </a><br>
                    <h4 class="login_text_text">Start Job</h4>
                </div>

                <div class="text-center padding-bottom">
                    <a   class="mybutton">
                        <i class="fa fa-clone icon_fix" aria-hidden="true"></i>
                    </a><br>
                    <h4 class="login_text_text">Bundle</h4>
                </div>


                <div class="text-center padding-bottom">
                    <a   class="mybutton">
                        <i class="fa  fa-file-text-o icon_fix" aria-hidden="true"></i>
                    </a><br>
                    <h4 class="login_text_text text-center">Instructions</h4>
                </div>
            </div>
        </div>
    </div>


</div>